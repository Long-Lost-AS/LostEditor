{
  "name": "lost-editor",
  "productName": "Lost Editor",
  "version": "0.5.0",
  "description": "A 2D map editor for game development",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "tauri:dev": "tauri dev",
    "build": "tsc --noEmit && vite build",
    "tauri": "tauri",
    "tauri:build": "tsc --noEmit && tauri build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:changed": "vitest related --run",
    "coverage:serve": "vite preview --outDir coverage",
    "prepare": "husky"
  },
  "keywords": [
    "map-editor",
    "tile-editor",
    "game-dev"
  ],
  "author": "Richard Str√∏mland Egeli",
  "license": "Custom",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "biome check --write",
      "vitest related --run --reporter=verbose"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@tauri-apps/cli": "^2.9.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.21",
    "fast-check": "^4.3.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "@tauri-apps/plugin-store": "^2.4.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "fuse.js": "^7.1.0",
    "react": "^19.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^19.2.0",
    "zod": "^4.1.12"
  }
}
